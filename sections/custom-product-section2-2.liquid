{%comment%}カスタムセクションマスクポイント２・３{%endcomment%}

<section class="product_pointsecond_wrap product_pointsecond2_wrap">
    <div class="product_pointsecond2_inner">
        <div class="product_pointsecond2_contents">
            <div class="pointsecond2_contents_in">
                <span class="point">POINT.{{section.settings.point22_number}}</span>
                <h2>{{section.settings.point22_title}}</h2>
                <div class="product_pointone_p">
                <p>{{section.settings.point22_text}}</p>
                </div>
            </div>
        </div>
        {%- if section.settings.point22_img != blank -%}
        <div class="product_point2_img">
            <img src="{{section.settings.point22_img | img_url: '1000x' }}">
        </div>
        {%- endif -%}
    </div>
</section>

  
  {% schema %}
  {
  "name":"カスタム商品POINT2-2",
    "settings":[
        {
            "type":"text",
            "id":"point22_number",
            "label":"point番号"
        },
        {
            "type":"text",
            "id":"point22_title",
            "label":"タイトル"
        }
        ,
        {
            "type":"image_picker",
            "id":"point22_img",
            "label":"画像"
        },
        {
            "type":"textarea",
            "id":"point22_text",
            "label":"point説明"
        }
        ],
      "presets":[
      {
        "name":"カスタム商品POINT2-2",
        "category":"カスタムパーツ"
      }]
    }
  {% endschema %}
  
  
  {% style %}
 
 /************ポイントセクション２*/  
.product_pointsecond2_wrap{
    padding-top:100px;
    width:100%;
  }
.product_pointsecond2_wrap h2{
    color:#231815;
    font-size: 1.7rem;
    font-weight:bold;
    margin-top:2rem;
    margin-bottom:2rem;
}
.product_pointsecond2_inner{
    width:80%;
    margin-right:auto;
    margin-left:auto;
}
.product_pointsecond2_contents{
    margin: 0 auto 60px;
    text-align: center;
    letter-spacing: 1px;
}
.product_point2_img img{
    width:100%;

}
@media screen and (max-width: 800px){
    .product_pointsecond2_wrap h2{
        font-size: 1.3rem;
    }
    .product_pointsecond2_inner{
        width:80%;
        flex-direction: column-reverse;
    }
    .product_pointsecond2_contents{
        width:100%;
        margin-bottom:30px;
    }
  }

  @media screen and (max-width: 600px){

    .product_pointsecond2_inner{
        width:90%;
   
    }
    .product_pointsecond2_contents{
        text-align:left;
    }

  }
  
  {% endstyle %}