/************ポイントセクション１************/


.product_pointone_contents{
    width:45%;
    text-align: left;
    letter-spacing: 1px;
    display:flex;
    flex-direction: column;
    justify-content: center;
}
.pointone_contents{
    margin-bottom:32px;
}

.product_pointone_subp p{
    color:rgb(148, 148, 148);
    font-size:0.8rem;
    margin-top:16px;
    margin-bottom:16px;
}

.product_pointone_contents .SectionFooter {
    text-align: left;
    margin-top:0;
}
.product_pointone_contents .SectionFooter .Button--primary {
    width: 80%;
    padding: 10px;
}
@media screen and (max-width: 800px){
    .product_point_wrap h2{
        font-size: 1.5rem;
    }
    .product_point_inner{
        width:60%;
        flex-direction:column-reverse;
        justify-content: space-around;
      }
      .product_point_img{
        width:100%;
    }
      .product_pointone_contents{
        width:100%;
        margin-bottom:40px;
        text-align:center;
    }
    .product_pointone_contents .SectionFooter {
        text-align: center;
    }
  }


  @media screen and (max-width: 600px){
    .product_point_inner{
        width:90%;
      }
    .product_pointone_contents{
        text-align:left;
    }

  }
  
  {% endstyle %}