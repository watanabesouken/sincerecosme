{%comment%}カスタムセクション{%endcomment%}
<section class="company_section">
    <div class="company_logo_img">
        <img src="{{section.settings.company_logo_img | img_url: '700x'}}}">
    </div>
    <div class="company_contents">
    <p>{{section.settings.company_introduction}}</p>
    </div>  
        

<table id="table01">
    <tbody><tr>
      <th>会社名</th>
      <td>{{section.settings.company_name}}</td>
    </tr>
    <tr>
      <th>所在地</th>
      <td>{{section.settings.company_address}}</td>
    </tr>
    <tr>
      <th>TEL</th>
      <td>{{section.settings.company_tel}}</td>
    </tr>
    <tr>
      <th>代表取締役</th>
      <td>{{section.settings.company_president}}</td>
    </tr>
    <tr>
      <th>設立年月日</th>
      <td>{{section.settings.company_establishment}}</td>
    </tr>
    <tr>
      <th>資本金</th>
      <td>{{section.settings.company_capital}}</td>
    </tr>
    <tr>
      <th>事業内容</th>
      <td>{{section.settings.company_content}}</td>
    </tr>
  <tr>
      <th>アクセス</th>
      <td>{{section.settings.company_access}}</td>
    </tr>
  </tbody></table>

  <div class="googlemap_wrap"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3239.8904897910556!2d139.77413645057644!3d35.7043123800917!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188ea130c3a6f7%3A0xc54b27b745048700!2z44CSMTEwLTAwMTYg5p2x5Lqs6YO95Y-w5p2x5Yy65Y-w5p2x77yT5LiB55uu77yR77yV4oiS77yRIExvZ3JhbuW-oeW-kueUuuODk-ODqyDvvJHvvJDpmo4!5e0!3m2!1sja!2sjp!4v1646655558691!5m2!1sja!2sjp" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe></div>
</section>
{% schema %}
  {
  "name":"カスタムcompany",
  "settings":[
        {
            "type":"image_picker",
            "id":"company_logo_img",
            "label":"会社logo"
        },
        {
            "type":"textarea",
            "id":"company_introduction",
            "label":"会社説明"
        },
        {
            "type":"text",
            "id":"company_name",
            "label":"会社名",
            "default": "株式会社センシアコスメティック"
        },
        {
            "type":"textarea",
            "id":"company_address",
            "label":"住所",
            "default": "〒110-0016 東京都台東区台東3-15-1"
        },
        {
            "type":"text",
            "id":"company_tel",
            "label":"電話番号",
            "default": "0120-425-262"
        },
        {
            "type":"text",
            "id":"company_president",
            "label":"代表名",
            "default": "藤井　美玲"
        },
        {
            "type":"text",
            "id":"company_establishment",
            "label":"設立年月日",
            "default": "平成11年２月４日"
        },
        {
            "type":"text",
            "id":"company_capital",
            "label":"資本金",
            "default": "3,000万円"
        },
        {
            "type":"text",
            "id":"company_content",
            "label":"事業内容",
            "default": "・化粧品の製造　・販売事業"
        },
        {
            "type":"textarea",
            "id":"company_access",
            "label":"アクセス",
            "default": "「JR御徒町駅」<br>「都営地下鉄上野御徒町駅」<br>「東京メトロ上野広小路亭」<br>より徒歩約５分"
        }
        ],
      "presets":[
      {
        "name":"カスタムcompany",
        "category":"カスタムパーツ"
      }]
    }
  {% endschema %}

  
  {% style %}
  .company_section{
      width:100%;
  }
    .company_logo_img{
      margin-left: auto;
      margin-right: auto;
      margin-bottom: 40px;
      width: 80%;
      max-width: 124px;
    }
    .company_logo_img img{
    width:100%;
    
    }
    .company_contents{
    text-align: center;
    margin-bottom: 60px;
    }
    
  .googlemap_wrap{
      width:60%;
      margin-top:40px;
      margin-left:auto;
      margin-right:auto;
  }
  /* table01 */


  #table01{
    margin-left: auto;
    margin-right: auto;
    width:60%;

  }
  #table01 tr {
  border-top: 1px solid #595959;
  }
  
  #table01 th,
  #table01 td {
    padding: 24px 0;
    border: none;
  }
  
  #table01 th {
    width: 30%;
    text-align: left;
    padding-left:10%;
    font-weight:bold;
  
  }
  @media only screen and (max-width: 800px) {
  .googlemap_wrap {
    width: 80%;
}
  }
